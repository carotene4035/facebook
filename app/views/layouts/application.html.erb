            <div class="padding">
              <div class="full col-sm-9">

                <!-- content -->
                <div class="row">

                  <!-- main col left -->
                  <div class="col-sm-5">
                    <%= render :partial => "common/profile" %>
                  </div>

                  <!-- main col right -->
                  <div class="col-sm-7">
                    <%= yield %>
                  </div>

                </div><!--/row-->

                <div class="row">
                  <div class="col-sm-6">
                    <a href="https://www.bootply.com/render/96266#">Twitter</a> <small class="text-muted">|</small> <a href="https://www.bootply.com/render/96266#">Facebook</a> <small class="text-muted">|</small> <a href="https://www.bootply.com/render/96266#">Google+</a>
