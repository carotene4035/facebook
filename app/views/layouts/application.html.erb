                </div>

                <div class="row" id="footer">
                  <div class="col-sm-6">

                  </div>
                  <div class="col-sm-6">
                    <p>
                    <a href="https://www.bootply.com/render/96266#" class="pull-right">©Copyright 2013</a>
                    </p>
                  </div>
                </div>

                <hr>

                <h4 class="text-center">
                  <a href="http://bootply.com/96266" target="ext">Download this Template @Bootply</a>
                </h4>

                <hr>


              </div><!-- /col-9 -->
            </div><!-- /padding -->
          </div>
          <!-- /main -->

        </div>
      </div>
    </div>


    <!--post modal-->
    <div id="postModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            Update Status
          </div>
          <div class="modal-body">
            <form class="form center-block">
              <div class="form-group">
                <textarea class="form-control input-lg" autofocus="" placeholder="What do you want to share?"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <div>
              <button class="btn btn-primary btn-sm" data-dismiss="modal" aria-hidden="true">Post</button>
              <ul class="pull-left list-inline"><li><a href="https://www.bootply.com/render/96266"><i class="glyphicon glyphicon-upload"></i></a></li><li><a href="https://www.bootply.com/render/96266"><i class="glyphicon glyphicon-camera"></i></a></li><li><a href="https://www.bootply.com/render/96266"><i class="glyphicon glyphicon-map-marker"></i></a></li></ul>
            </div>
          </div>
        </div>
      </div>
    </div>

